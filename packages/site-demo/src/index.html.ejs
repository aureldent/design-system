<!DOCTYPE html>
<html lang="en" ng-app="design-system">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>Design System</title>

        <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:400,500,700" />

        <%
        // CSS assets.
        for (const key in htmlWebpackPlugin.files.css) {
            const href = htmlWebpackPlugin.files.css[key];
            const id = href.split('.')[0].replace(/^\//, '');
            const disabled = id === 'theme-material' ? 'disabled' : '';

            %>
            <link href="<%= href %>" id="<%= id %>" rel="stylesheet" <%= disabled %> />
            <%
        }
        %>
    </head>

    <body>
        <script
            src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>
        <script
            src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.8/angular.js"
            integrity="sha384-jzCialnA/+R5tQl4GVSzPWA35ryuVnSFP54ZnS3vAVsaqOj82f6+4kLgo0NH4SjS"
            crossorigin="anonymous">
        </script>

        <div class="app" id="root"></div>

        <%
        // JS chunks.
        for (const key in htmlWebpackPlugin.files.chunks) {
            const entry = htmlWebpackPlugin.files.chunks[key].entry;
            // Ignore theme chunks.
            if (entry.includes('theme-')) continue;

            %>
            <script src="<%= entry %>" type="text/javascript" crossorigin="<%= webpackConfig.output.crossOriginLoading %>"></script>
            <%
        }
        %>
    </body>
</html>
